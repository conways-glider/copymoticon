---
import EmoticonList from "../components/EmoticonList.astro";
import { staticEmoticons } from "../data/emoticons.ts";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link href="/favicon.svg" rel="icon" type="image/svg+xml" />
    <meta content="width=device-width" name="viewport" />
    <meta content={Astro.generator} name="generator" />
    <title>Astro</title>
  </head>
  <body>
    <header>
      <h1>Copymoticon</h1>
      <p>A simple site to copy emoticons to the clipboard.</p>
    </header>
    <EmoticonList emoticons={staticEmoticons} />
  </body>
</html>

<style>
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    background: #f3f4f6;
    color: #333;
  }

  header {
    background-color: #673ab7;
    color: #fff;
    padding: 1rem;
    text-align: center;
  }

  header h1 {
    margin: 0;
    font-size: 2rem;
  }

  header p {
    margin: 0.5rem 0 0;
    font-size: 1rem;
  }
</style>
